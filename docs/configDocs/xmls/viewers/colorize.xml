<?xml version="1.0"?>

<colorize>
    <options>
        <scale>2</scale> <!-- Double - Scale the image up or down -->
        <min>0.01</min> <!-- Double - Min value for converting to grayscale -->
        <max>1.5</max> <!-- Double - Max value for converting to grayscale -->
        <gray>true</gray> <!-- Bool - Flag to convert the input image to
            grayscale (CV_8U) using the max and min values. If max and min are
            not set, the extreme values of the image pixel are used -->
	<colormap>jet</colormap> <!-- the color space for applyColorMap; supported: jet, hsv, hot, rainbow -->
    </options>
    <inputs>
        <img>depth</img> <!-- String - Name of the input image -->
    </inputs>
    <outputs>
        <img>colored</img> <!-- String - Name of the colorized output  -->
    </outputs>
</colorize>
